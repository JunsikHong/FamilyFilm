CREATE TABLE `USER` (
	`USER_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`USER_ID`	VARCHAR(100)	NOT NULL,
	`USER_PW`	VARCHAR(100)	NOT NULL,
	`USER_NAME`	VARCHAR(100)	NOT NULL,
	`USER_EMAIL`	VARCHAR(100)	NULL,
	`USER_PHONE`	VARCHAR(100)	NOT NULL,
	`USER_JOB`	VARCHAR(100)	NULL,
	`USER_AR`	VARCHAR(100)	NOT NULL,
	`USER_AR_ZONECODE`	VARCHAR(100)	NOT NULL,
	`USER_AR_DETAIL`	VARCHAR(100)	NOT NULL,
	`USER_GENDER`	VARCHAR(1)	NOT NULL,
	`USER_JOINDATE`	TIMESTAMP	NOT NULL	DEFAULT NOW(),
	`USER_DELETE_YN`	VARCHAR(1)	NOT NULL	DEFAULT 'N'
	`USER_BIRTH`	TIMESTAMP	NOT NULL
);

CREATE TABLE `MEMO` (
	`MEMO_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`MEMO_GROUP`	VARCHAR(50)	NULL,
	`MEMO_TITLE`	VARCHAR(500)	NOT NULL,
	`MEMO_CONTENT`	VARCHAR(5000)	NOT NULL,
	`MEMO_SHARE_YN`	VARCHAR(1)	NOT NULL	DEFAULT 'Y',
	`MEMO_IMPORTANT_YN`	VARCHAR(1)	NOT NULL	DEFAULT 'N',
	`MEMO_CREATE_DATE`	TIMESTAMP	NOT NULL	DEFAULT NOW(),
	`MEMO_MODIFY_DATE`	TIMESTAMP	NOT NULL	DEFAULT NOW(),
	`FAMILY_PROPER_NUM`	VARCHAR(100)	NOT NULL
);

CREATE TABLE `FAMILY` (
	`FAMILY_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`FAMILY_GROUP_NUM`	VARCHAR(100)	NOT NULL,
	`FAMILY_GROUP_PW`	VARCHAR(100)	NULL,
	`FAMILY_NAME`	VARCHAR(500)	NOT NULL,
	`FAMILY_INTRODUCE`	VARCHAR(1000)	NOT NULL,
	`USER_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`USER_ID`	VARCHAR(100)	NOT NULL,
	`FAMILY_RELATIONSHIP_PROPER_NUM`	VARCHAR(100)	NOT NULL
);

CREATE TABLE `SCHEDULE` (
	`SCHEDULE_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`SCHEDULE_TITLE`	VARCHAR(500)	NOT NULL	DEFAULT '제목 없음',
	`SCHEDULE_DATE`	TIMESTAMP	NOT NULL,
	`SCHEDULE_TYPE`	VARCHAR(100)	NOT NULL	DEFAULT '기본',
	`SCHEDULE_COLOR`	VARCHAR(100)	NOT NULL	DEFAULT '#F7D358',
	`SCHEDULE_AR`	VARCHAR(100)	NULL,
	`SCHEDULE_AR_ZONECODE`	VARCHAR(100)	NULL,
	`SCHEDULE_AR_DETAIL`	VARCHAR(100)	NULL,
	`SCHEDULE_NOTIFICATION_YN`	VARCHAR(1)	NOT NULL	DEFAULT 'N',
	`FAMILY_PROPER_NUM`	VARCHAR(100)	NOT NULL
);

CREATE TABLE `FAMILY RELATIONSHIP` (
	`FAMILY_RELATIONSHIP_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`FAMILY_RELATIONSHIP_CLASIFI_CODE`	VARCHAR(50)	NULL,
	`FAMILY_RELATIONSHIP_DESCRIPTION`	VARCHAR(100)	NULL
);

CREATE TABLE `FAMILY FILM FILE` (
	`FAMILY_FILM_FILE_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`FAMILY_FILM_FILE_PATH`	VARCHAR(1000)	NOT NULL,
	`FAMILY_FILM_FILE_UUID`	VARCHAR(1000)	NOT NULL,
	`FAMILY_FILM_ORIGINAL_FILE_NAME`	VARCHAR(500)	NOT NULL,
	`FAMILY_FILM_PROPER_NUM`	VARCHAR(100)	NOT NULL
);

CREATE TABLE `FAMILY FILM` (
	`FAMILY_FILM_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`FAMILY_FILM_TITLE`	VARCHAR(500)	NOT NULL,
	`FAMILY_FILM_CONTENT`	VARCHAR(1000)	NULL,
	`FAMILY_FILM_DATE`	VARCHAR(100)	NOT NULL,
	`FAMILY_FILM_TYPE`	VARCHAR(10)	NULL,
	`FAMILY_PROPER_NUM`	VARCHAR(100)	NOT NULL
);

CREATE TABLE `USER FILE` (
	`USER_FILE_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`USER_FILE_PATH`	VARCHAR(1000)	NOT NULL,
	`USER_FILE_UUID`	VARCHAR(1000)	NOT NULL,
	`USER_ORIGINAL_FILE_NAME`	VARCHAR(500)	NOT NULL,
	`USER_PROPER_NUM`	VARCHAR(100)	NOT NULL,
	`USER_ID`	VARCHAR(100)	NOT NULL
);

ALTER TABLE `USER` ADD CONSTRAINT `PK_USER` PRIMARY KEY (
	`USER_PROPER_NUM`,
	`USER_ID`
);

ALTER TABLE `MEMO` ADD CONSTRAINT `PK_MEMO` PRIMARY KEY (
	`MEMO_PROPER_NUM`
);

ALTER TABLE `FAMILY` ADD CONSTRAINT `PK_FAMILY` PRIMARY KEY (
	`FAMILY_PROPER_NUM`
);

ALTER TABLE `SCHEDULE` ADD CONSTRAINT `PK_SCHEDULE` PRIMARY KEY (
	`SCHEDULE_PROPER_NUM`
);

ALTER TABLE `FAMILY RELATIONSHIP` ADD CONSTRAINT `PK_FAMILY RELATIONSHIP` PRIMARY KEY (
	`FAMILY_RELATIONSHIP_PROPER_NUM`
);

ALTER TABLE `FAMILY FILM FILE` ADD CONSTRAINT `PK_FAMILY FILM FILE` PRIMARY KEY (
	`FAMILY_FILM_FILE_PROPER_NUM`
);

ALTER TABLE `FAMILY FILM` ADD CONSTRAINT `PK_FAMILY FILM` PRIMARY KEY (
	`FAMILY_FILM_PROPER_NUM`
);

ALTER TABLE `USER FILE` ADD CONSTRAINT `PK_USER FILE` PRIMARY KEY (
	`USER_FILE_PROPER_NUM`
);

